#:kivy 2.0.0
# what version you want to use 
<PingPongGame>:
    # use the id to locate, and main.py use this type of value
    ball: ping_pong_ball
    player1: player_left
    player2: player_right
# this name is the same as the class name  you have defined in main file
    # below the canvas add a rectangle: define position and size
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    # two label define left and right size number
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: str(root.player1.score)
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: str(root.player2.score)
    
    PingPongBall:
        id: ping_pong_ball
        center: self.parent.center
    
    PingPongPaddle:
        id: player_left
        x: root.x
        center_y: root.center_y
    
    PingPongPaddle:
        id: player_right
        x: root.width - self.width
        center_y: root.center_y


<PingPongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size

<PingPongPaddle>:
    size: 25, 200
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size