#:kivy 2.0.0
# what version you want to use 
<PingPongGame>:
    # use the id to locate, and main.py use this type of value
    ball: ping_pong_ball
# this name is the same as the class name  you have defined in main file
    # below the canvas add a rectangle: define position and size
    canvas:
        Rectangle:
            pos: self.center_x - 5, 0
            size: 10, self.height
    
    # two label define left and right size number
    Label:
        font_size: 70
        center_x: root.width / 4
        top: root.top - 50
        text: "0"
    
    Label:
        font_size: 70
        center_x: root.width * 3 / 4
        top: root.top - 50
        text: "0"
    
    PingPongBall:
        id: ping_pong_ball
        center: self.parent.center


<PingPongBall>:
    size: 50, 50
    canvas:
        Ellipse:
            pos: self.pos
            size: self.size